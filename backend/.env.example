# FAD System Environment Variables

# GHA Database (FAD Main Database)
MONGO_URI=mongodb://localhost:27017
DB_NAME=GHA

# GHS Database (Meeting Arrangement Schedule Database)
# If GHS is on the same MongoDB server, use the same MONGO_URI
# If GHS is on a different server, specify a different URI
GHS_MONGO_URI=mongodb://localhost:27017
GHS_DB_NAME=GHS

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (Brevo)
BREVO_API_KEY=your-brevo-api-key
SENDER_EMAIL=noreply@your-school.edu
SENDER_NAME=FAD系统

# Server Configuration
PORT=8080
NODE_ENV=development
